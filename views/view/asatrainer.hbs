                                const element = document.getElementById(section);
                                if (section !== exceptSectionId) {
                                    element.classList.add('hidden');
                                }
                            });
                        }

                        // Function to toggle the visibility of a section
                        function toggleCollapse(sectionId) {
                            const section = document.getElementById(sectionId);
                            if (section) {
                                if (section.classList.contains('hidden')) {
                                    hideAllSections(sectionId);
                                    section.classList.remove('hidden');
                                } else {
                                    section.classList.add('hidden');
                                }
                            }
                        }

                        // Event listener to hide all sections when clicking outside toggle buttons and sections
                        document.addEventListener('click', function (event) {
                            const targetElement = event.target;
                            const isToggleButton = targetElement.closest('.toggle-button');
                            const isSection = targetElement.closest('.card');

                            if (!isToggleButton && !isSection) {
                                hideAllSections(null);
                            }
                        });

                        // Prevent hiding sections when clicking on the buttons
                        document.querySelectorAll('.toggle-button').forEach(button => {
                            button.addEventListener('click', function (event) {
                                event.stopPropagation();
                                toggleCollapse(button.dataset.target);
                            });
                        });
                    </script>
