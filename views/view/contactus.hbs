        function toggleContent(contentId, iconId) {
            // Get the current content and icon
            const content = document.getElementById(contentId);
            const icon = document.getElementById(iconId);

            // If the content is currently hidden, show it and hide the others
            if (content.classList.contains('hidden')) {
                // Hide all content and reset all icons
                document.querySelectorAll('.content').forEach(c => c.classList.add('hidden'));
                document.querySelectorAll('.toggle-btn svg').forEach(i => {
                    i.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />';
                });

                // Show the current content and change the icon to minus
                content.classList.remove('hidden');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />';
            } else {
                // If the content is already shown, hide it and reset the icon to plus
                content.classList.add('hidden');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />';
            }
        }


