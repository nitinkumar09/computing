        // js start here for collapse button
        document.addEventListener('DOMContentLoaded', () => {
            // Get all toggle buttons
            const toggleButtons = document.querySelectorAll('.toggle-button');

            // Function to hide all sections
            const hideAllSections = () => {
                const sections = document.querySelectorAll('.card .para');
                sections.forEach(section => section.classList.add('hidden'));
            };

            // Add click event listener to each button
            toggleButtons.forEach(button => {
                button.addEventListener('click', (event) => {
                    // Prevent click from propagating to document click listener
                    event.stopPropagation();

                    // Get the target section
                    const target = button.getAttribute('data-target');
                    const targetSection = document.getElementById(target);

                    // Hide all sections
                    hideAllSections();

                    // Toggle the target section
                    targetSection.classList.toggle('hidden');
                });
            });

            // Add click event listener to document
            document.addEventListener('click', (event) => {
                const isClickInsideCard = event.target.closest('.card');

                if (!isClickInsideCard) {
                    hideAllSections();
                }
            });
        });

        // js end here for collapse button
