                        // js end here for collapse button

                        const images = document.querySelectorAll('.marquee img'); // Select all images inside the marquee
                        const marqueeWidth = document.querySelector('.marquee').offsetWidth; // Get marquee width
                        let currentPosition = 0; // Starting position

                        function moveImages() {
                            currentPosition -= 1; // Move images left by 1 pixel on each loop

                            images.forEach((image, index) => {
                                const imageWidth = image.offsetWidth; // Get individual image width
                                const newPosition = currentPosition - index * imageWidth; // Calculate new position considering image width

                                // Check if image needs to reappear from the right
                                if (newPosition < -imageWidth) {
                                    newPosition = marqueeWidth - imageWidth; // Set new position at the end of the marquee
                                }

                                image.style.transform = `translateX(${newPosition}px)`; // Apply the new position
                            });

                            requestAnimationFrame(moveImages); // Request a new animation frame for continuous movement
                        }

                        moveImages(); // Start the animation


