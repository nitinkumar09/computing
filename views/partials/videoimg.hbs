    <script>
        // JS START HERE FOR NetEdge At a Glance COUNTING GENERATE of Background VIDEO text
        // Function to generate numbers dynamically
        function generateNumberCount(start, end, elementId) {
            let headingElement = document.getElementById(elementId);
            let count = start;

            // Update heading text every 100 milliseconds (adjust as needed)
            let interval = setInterval(function () {
                headingElement.textContent = count;
                count++;
                if (count > end) {
                    clearInterval(interval); // Stop when count reaches end
                }
            }, 40); // Adjust interval timing as per your preference
        }

        // Call the function to update the heading with counting effect
        generateNumberCount(1, 165, 'firstCardHeading');
