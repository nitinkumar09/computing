        // js start here for rotate service items icon
        const rotateiconElements = document.querySelectorAll('.rotateicon');

        rotateiconElements.forEach(element => {
            element.addEventListener('mouseenter', () => {
                element.querySelector('i').classList.add('rotate-90');
                element.querySelector('a').classList.add('text-blue-600');
            });

            element.addEventListener('mouseleave', () => {
                element.querySelector('i').classList.remove('rotate-90');
                element.querySelector('a').classList.remove('text-blue-600');
            });
        });
        // js end here for rotate service items icon


        /*NAVBAR JS END HERE*/


        // this js start here for navbar logo
        // JavaScript to add continuous scaling effect to the logo
        const logo = document.getElementById('mantraLogo');

        let scaleDirection = 1;
        let scaleFactor = 0.05; // Change this value to adjust the scaling intensity

        function animateLogo() {
            let currentScale = parseFloat(window.getComputedStyle(logo).getPropertyValue('transform').split(',')[3]);
            let newScale = currentScale + scaleFactor * scaleDirection;

            if (newScale >= 1.1 || newScale <= 0.9) {
                scaleDirection *= -1; // Reverse direction if scale exceeds limits
            }

            logo.style.transform = `scale(${newScale})`;
            requestAnimationFrame(animateLogo);
        }

        animateLogo();




