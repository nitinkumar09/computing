        document.addEventListener('DOMContentLoaded', () => {
            // Add event listeners to buttons
            const buttons = [
                { button: 'home-button', dropdown: 'home-dropdown', icon: 'home-icon' },
                { button: 'services-button', dropdown: 'services-dropdown', icon: 'services-icon' },
                { button: 'Training-button', dropdown: 'Training-dropdown', icon: 'Training-icon' },
                { button: 'products-button', dropdown: 'products-dropdown', icon: 'products-icon' },
                { button: 'Portfolio-button', dropdown: 'Portfolio-dropdown', icon: 'Portfolio-icon' },
                { button: 'Resource-button', dropdown: 'Resource-dropdown', icon: 'Resource-icon' },
                { button: 'Partners-With-Us-button', dropdown: 'Partners-With-Us-dropdown', icon: 'Partners-With-Us-icon' },
                { button: 'Careers-button', dropdown: 'Careers-dropdown', icon: 'Careers-icon' },
                { button: 'enrolled-button', dropdown: 'enrolled-dropdown', icon: 'enrolled-icon' },
                { button: 'contact-button', dropdown: 'contact-dropdown', icon: 'contact-icon' }
            ];

            buttons.forEach(({ button, dropdown, icon }) => {
                const buttonEl = document.getElementById(button);
                const dropdownEl = document.getElementById(dropdown);
                const iconEl = document.getElementById(icon);

                if (buttonEl && dropdownEl && iconEl) { // Ensure all elements exist
                    buttonEl.addEventListener('click', function () {
                        // Toggle visibility and height for dropdown
                        dropdownEl.classList.toggle('hidden');
                        dropdownEl.classList.toggle('max-h-0');
                        dropdownEl.classList.toggle('max-h-screen');

                        // Rotate icon
                        iconEl.classList.toggle('rotate-45');

                        // Close other dropdowns
                        buttons.forEach(({ button: btn, dropdown: dd, icon: ic }) => {
                            if (btn !== button) {
                                const otherDropdownEl = document.getElementById(dd);
                                const otherIconEl = document.getElementById(ic);

                                if (otherDropdownEl && otherIconEl) { // Ensure elements exist
                                    otherDropdownEl.classList.add('hidden');
                                    otherDropdownEl.classList.remove('max-h-screen');
                                    otherIconEl.classList.remove('rotate-45');
                                }
                            }
                        });
                    });
                }
            });
        });

        //JS START HERE FOR DROPDWON COLLPASE WITH PLUS ICON ROTATE


        //const dropdownButtons = document.querySelectorAll('#mobile-menu .relative > button');





        // mobile me link collapse end here


